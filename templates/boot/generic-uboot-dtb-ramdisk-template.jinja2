{% extends 'base/kernel-ci-base.jinja2' %}
{% block metadata %}
{{ super() }}
{% endblock %}
{% block main %}
{{ super() }}
{% endblock %}
{% block actions %}
actions:
  - deploy:
     timeout:
       minutes: 2
     to: tftp
     kernel:
         url: {{ kernel_url }}
         type: image
     ramdisk:
         url: {{ initrd_url }}
         compression: gz
{% if modules_url %}
     modules:
         url: {{ modules_url }}
         compression: xz
{% endif %}
     dtb:
         url: {{ dtb_url }}
     os: oe

  - boot:
     method: u-boot
     commands: ramdisk
     type: image
     prompts:
       - 'linaro-test'
       - 'root@debian:~#'
       - '/ #'
{% endblock %}
